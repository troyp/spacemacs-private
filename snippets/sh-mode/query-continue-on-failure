# -*- mode: snippet -*-
# name: y-or-n
# key: cont
# --
echo -n "${1:describe action} ... "
if $0; then
    echo "OK."
else
    echo "Failed."
    while read -r -p "Continue? [y/n] " answer; do
        case `echo $answer | tr 'A-Z' 'a-z'` in
            y|yes)
                break
                ;;
            n|no)
                exit 2
        esac
    done
fi